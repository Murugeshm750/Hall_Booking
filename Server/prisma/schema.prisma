generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  u_id Int @unique @default(autoincrement())
  u_name String
  u_contact String
  u_address String
  u_email String
  password String
  isuser String 
}

model Owner {
  o_id Int @unique @default(autoincrement())
  o_name String
  o_contact String
  o_address String
  o_email String
  password String
  isowner String 
}
model passkey {
  isowner String @unique @default("owner")
  isuser String @unique @default("user")
}
model Hall {
  h_id Int @unique @default(autoincrement())
  h_name String
  h_location String
  h_price BigInt
  h_img Bytes
  h_size_from Int
  h_size_to Int
}

